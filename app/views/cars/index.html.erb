<div class="index-container">
  <div class="cars">
    <% @cars.each do |car| %>
      <%= link_to car_path(car) do %>
        <div class="car-card">
          <div class="car-img">
          </div>
          <div class="car-bottom">
            <div class="car-bottom-header">
              <div class="car-bottom-model">
                <p><%= car.brand %> <%= car.model %></p>
              </div>
              <div class="car-bottom-price">
                <p><%= car.price %>â‚¬/jour</p>
              </div>
            </div>
            <div class="car-bottom-rating">
              <% 5.times do %>
                <i class="fas fa-star"></i>
              <% end %>
            </div>
            <div class="car-bottom-description">
              <p> <%= car.description %> </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="map">
  </div>
</div>
