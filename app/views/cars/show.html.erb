<div class="banner-show-car" style="background-image: linear-gradient(270deg, rgba(14,14,14,0.44) 36%, rgba(14,14,14,0.71) 58%), url('<%= instance_image_path @car.picture%>');">
  <h2 class="show-title text-center"><%= @car.brand %> <%= @car.model %></h5>
    <%= link_to "Book It", new_car_booking_path(@car), class: "btn btn-warning" %>
    <%= link_to "back to list", cars_path, class: "btn btn-warning" %>
</div>
<div class="main-container">
  <div class="car-card">
    <div class="car-bottom">
      <div class="car-bottom-header">
        <div class="car-bottom-model">
          <p><%= @car.brand %> <%= @car.model %></p>
        </div>
        <div class="car-bottom-price">
          <p><%= @car.price %>â‚¬/jour</p>
        </div>
      </div>
      <div class="car-bottom-rating">
        <% 5.times do %>
          <i class="fas fa-star"></i>
        <% end %>
      </div>
      <div class="car-bottom-description">
        <p> <%= @car.description %> </p>
      </div>
    </div>
  </div>
</div>
